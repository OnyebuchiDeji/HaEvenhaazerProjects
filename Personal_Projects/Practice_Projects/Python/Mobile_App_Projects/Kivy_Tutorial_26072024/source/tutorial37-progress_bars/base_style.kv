
<MyLayout>  
    BoxLayout:
        
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        Label:
            id: progress_label
            text: "0% Progress"
            font_size: 30


        ProgressBar:
            id: my_progress_bar
            #   Set Default Value
            # value: .25
            min: 0
            max: 1
            pos_hint: {'x':.1}
            size_hint_x: .8
        
        Button:
            text: "Don't Press Me!"
            on_press: root.pressed_it()

