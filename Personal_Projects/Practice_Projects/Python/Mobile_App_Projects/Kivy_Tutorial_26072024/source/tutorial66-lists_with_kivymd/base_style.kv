#   Demonstrating How to add a KivyMD List and ListItem


<MDButton>
    style: "elevated"
    size_hint: None, None


<MyBoxLayout>
    md_bg_color: self.theme_cls.backgroundColor
    orientation: 'vertical'
    padding: "0dp"
    spacing: "5dp"


    #   Just to show info of the app
    MDTopAppBar:
        id: id_topbar
        type: "small"
        size_hint_x: 0.95
        pos_hint: {"center_x": .5}

        MDTopAppBarLeadingButtonContainer:
            # md_bg_color: (1, .2, 1, 1)
            MDActionTopAppBarButton:
                icon: "arrow-left"
                # on_press: app.on_action_button_pressed(self)

        MDTopAppBarTitle:
            text: app.title

        MDTopAppBarTrailingButtonContainer:
            MDButton:
                id: id_theme_btn
                on_release: app.toggle_theme()
                # text: "Switch to Dark Theme" if app.light_theme else "Switch To Light Theme"
                text: app.theme_text_l if app.light_theme else app.theme_text_d
                pos_hint: {"center_x":0.5, "center_y":0.5}
                MDButtonText:
                    text: id_theme_btn.text

    ##  This is ScrollView from normal Kivy
    ##  MDListItems are a cool way to show List Items
    ScrollView:
        MDList:
            MDListItem:
                on_release: app.on_list_press(self)
                ##  This is a One-Line List Item
                ##  It only has the MDListItemHeadlineText
                MDListItemLeadingIcon:  # MDListItemLeadingAvatar
                    icon: "language-python"

                MDListItemHeadlineText:
                    text: "One-Line List Item"

                MDListItemTrailingIcon:  # MDListItemTrailingCheckbox
                    icon: "pencil-outline"

            ##  This is a Two-Line List Item
            ##  It has both the MDListItemHeadlineText and MDListItemSupportingText
            MDListItem:
                unfocus_color: "red"
                on_release: app.on_list_press(self)

                MDButton:
                    MDButtonText:
                        text: "Bro"
                
                MDListItemLeadingIcon:  # MDListItemLeadingAvatar
                    icon: "language-javascript"

                MDListItemHeadlineText:
                    text: "Two-Line List Item"

                MDListItemSupportingText:
                    text: "Second Text Line"

                MDListItemTrailingIcon:  # MDListItemTrailingCheckbox
                    icon: "pencil-outline"

            ##  This is a Three-Line List Item
            ##  It has the MDListItemHeadlineText, MDListItemSupportingText and MDListItemTertiaryText
            MDListItem:
                on_release: app.on_list_press(self)
                # md_bg_color: 'red'
                background: "red"
                unfocus_color: "red"
                # focus_color: "red"
                # divider_color: "red"
                MDListItemLeadingIcon:  # MDListItemLeadingAvatar
                    icon: "language-java"

                MDListItemHeadlineText:
                    text: "Three-Line List Item"

                MDListItemSupportingText:
                    text: "Second Text Line"

                MDListItemTertiaryText:
                    text: "Third Text Line"

                MDListItemTrailingIcon:  # MDListItemTrailingCheckbox
                    icon: "pencil-outline"