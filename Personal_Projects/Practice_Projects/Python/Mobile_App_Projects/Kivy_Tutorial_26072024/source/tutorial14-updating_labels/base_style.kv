
<MyLayout>
    fname: fname_id
    lname: lname_id
    age: age_id
    more_info: more_info_id
    output_label: output_label_id


    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "First Name"
                font_size: 32
            TextInput:
                id: fname_id
                multiline: False
                size_hint: (1, .5)

            Label:
                text: "Last Name"
                font_size: 32
            TextInput:
                id: lname_id
                multiline: False
                size_hint: (1, .5)
                
            Label:
                text: "Age"
                font_size: 32
            TextInput:
                id: age_id
                multiline: False
                size_hint: (1, .5)

            Label:
                text: "More About You"
                font_size: 32
            TextInput:
                id: more_info_id
                multiline: True
                size_hint: (1, .5)
        
        Button:
            text: "Submit"
            size_hint: (1, .5)
            font_size: 32
            on_press: root.on_submit(self)
        
        Label:
            id: output_label_id
            font_size: 16
            background_color: (0, 0, 0, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos

            color: (0.2, 0.85, 0.2)
