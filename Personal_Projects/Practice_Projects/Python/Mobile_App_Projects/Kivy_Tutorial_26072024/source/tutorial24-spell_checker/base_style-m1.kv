<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        #   This is where the correct spelling's suggestions will be added
        Label:
            id: word_label
            text: "Enter a Word"
            text_size: self.size
            #   Determining the position of the text entered into it
            halign: "center"
            valign: "middle"
            font_size: 32
            background_color: (0.6, 0.6, 0.6, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size


        TextInput:
            id: word_input
            multiline: False
            size_hint: (1, .5)
            # password: True
            #   To Ensure only one word can be entered, overriding the insert_text property
            insert_text: root.insert_text
            #   Nothing like `valign` for TextInput
            # valign: "middle"

        Button:
            size_hint: (1, .5)
            font_size: 32
            text: "Submit"
            on_press: root.press()