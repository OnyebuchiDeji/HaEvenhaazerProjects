<Button>
    size_hint: (.2, .2)
    font_size: 32
    background_color: (0.6, 0.6, 0.6, 1)

<MyLayout>
    BoxLayout:

        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            #   Alignsthe text in the right side of text box
            halign: "right"
            font_size: 38
            size_hint: (1, .20)
        
        GridLayout:
            cols: 4
            rows: 5

            Button:
                text: "%"
                background_color: (0.9, 0.9, 0.9, 1)
                on_press: root.button_press("%")
            Button:
                text: "CE"
                background_color: (0.9, 0.9, 0.9, 1)
            Button:
                id: clear_btn
                text: "C"
                background_color: (0.9, 0.9, 0.9, 1)
                on_press: root.clear_input()

            Button:
                text: "/"
                background_color: (0.9, 0.9, 0.9, 1)
                on_press: root.divide_button()

            Button:
                text: "7"
                on_press: root.button_press(7)
                
            Button:
                text: "8"
                on_press: root.button_press(8)
                
            Button:
                text: "9"
                on_press: root.button_press(9)
                
            Button:
                text: "x"
                background_color: (0.9, 0.9, 0.9, 1)
                on_press: root.multiply_button()
                
            Button:
                text: "4"
                on_press: root.button_press(4)
                
            Button:
                text: "5"
                on_press: root.button_press(5)
                
            Button:
                text: "6"
                on_press: root.button_press(6)
                
            Button:
                text: "-"
                background_color: (0.9, 0.9, 0.9, 1)
                on_press: root.subtract_button()
                
            Button:
                text: "1"
                on_press: root.button_press(1)
                
            Button:
                text: "2"
                on_press: root.button_press(2)
                
            Button:
                text: "3"
                on_press: root.button_press(3)
                
            Button:
                text: "+"
                background_color: (0.9, 0.9, 0.9, 1)
                on_press: root.add_button()
                
            Button:
                text: "+/-"
                
            Button:
                text: "0"
                on_press: root.button_press(0)
                
            Button:
                text: "."
                on_press: root.decimal_button()
                
            Button:
                text: "="
                background_color: (0.9, 0.9, 0.9, 1)
                on_press: root.equals_button()