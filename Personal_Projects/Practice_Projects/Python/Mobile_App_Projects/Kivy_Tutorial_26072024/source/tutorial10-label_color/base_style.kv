#   Setting properties inherited by all corresponding widgets

#   Every property defined below applies for every Button
<Button>
    # font_size: 32
    background_normal: ''
    background_color: (0.4, 0.1, 0.2, 1)

<TextInput>
    # background_color: (150/255, 150/255, 150/255, 1)
    background_color: (0.3, 0.75, 0.45, 1)


#   Keep in mind that the font_size defined for Labels
#   is also inherited by Buttons
<Label>
    font_size: 32


<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10        

        Label:
            text: "First Name"
            # font_size: 45
            #   This on its own does nothing
            #   But it works when added with the code below
            background_color: (0.1, 0.15, 0.45, 1)
            #   to change the color in a label:
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
                
            #   Now to change the color of its text:
            color: (0.3, 0.6, 0.15)
            bold: True
            italic: True
            #   These two below add an outline
            # outline_color: (0.15, 0.15, 0.15)
            outline_color: (0, 0, 0)
            outline_width: 10
        
        TextInput:
            multiline: False

        Label:
            text: "Last Name"
        
        TextInput:
            multiline: False


        Button:
            text: "Clear"
            #   Can still define the colour for a specific button
            #   it will overwrite the default widget for Buttons property defined above
            background_color: (0.6, 0.2, 0.2, 1)
