<MyLayout>
    slider_text: slider_label
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id: slider_label
            text: "Play with the Slider!"
            font_size: 32
        
        Slider:
            min: 0
            max: 50
            step: 1
            #   Horizontal by default too
            # orientation: "horizontal"
            orientation: "vertical"
            on_value: root.slider_value(*args)
            