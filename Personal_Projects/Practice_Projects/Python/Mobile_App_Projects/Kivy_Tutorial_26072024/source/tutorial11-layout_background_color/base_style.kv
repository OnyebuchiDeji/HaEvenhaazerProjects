
<MyLayout>
    #   This is Method 1 of changing the background of the app
    #   By changing the main layout's color.
    #   NOTE that this overrides the Method 2 defined in the Python script
    canvas.before:
        Color:
            # rgba: (0.45, .10, .30, 1)
            rgba: (0.75, .70, .70, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: 10
        spacing: 10        

        Label:
            text: "First Name"
        
        TextInput:
            multiline: False

        Label:
            text: "Last Name"
        
        TextInput:
            multiline: False


        Button:
            text: "Clear"
            #   Can still define the colour for a specific button
            #   it will overwrite the default widget for Buttons property defined above
            background_color: (0.6, 0.2, 0.2, 1)



<TextInput>
    background_color: (0.3, 0.75, 0.45, 1)

#   Pree how the Button widgets inherit the poperties of the Label widget.
<Label>
    font_size: 32
    #   Now to change the color of its text:
    color: (0.3, 0.6, 0.15)
    bold: True
    italic: True
    #   These two below add an outline
    # outline_color: (0.15, 0.15, 0.15)
    outline_color: (0, 0, 0)
    outline_width: 10
    
<Button>
    # font_size: 32
    background_normal: ''
    background_color: (0.4, 0.1, 0.2, 1)