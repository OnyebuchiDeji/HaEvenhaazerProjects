<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        Button:
            text: "Yo! World!"
            on_press: print("Yo! Yo!")

        RoundedButton:
            text: "Preach it!"
            #   Change size
            pos_hint: {'center_x': 0.5}
            size_hint: (1, .3)
            on_press: print("Pro-phe-cy!")

            ##  Must remove this definition of attributes
            ##  since they're already defined as RoundedButton
            # background_normal: ''
            # background_color: (0.2, 0.3, 0.6, 1)

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (0.2, 0.3, 0.6, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [100]